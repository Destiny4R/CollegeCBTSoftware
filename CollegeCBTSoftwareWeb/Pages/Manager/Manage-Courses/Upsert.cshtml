@page
@model UpsertModel
@{
    ViewData["Title"] = Model.course.Id > 0 ? "Update Subject" : "Add Subject";
}
<br />
<form method="post">
    <div class="container-fluid">
        <div class="d-flex justify-content-between">
            <div class="badge text-dark bg-info"><h4>@ViewData["Title"]</h4></div>
            <div class="btn-group">
                <a class="btn btn-secondary" asp-page="Index">
                    <i class="fa fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <label asp-for="course.Name" class="col-md-4 h5 text-dark">Course Name</label>
                            <div class="col-md-8">
                                <input asp-for="course.Name" class="form-control" />
                                <span asp-validation-for="course.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 offset-md-4 m-3">
                                <div>
                                    @if (Model.course.Id > 0)
                                    {
                                        <input asp-for="course.Id " type="hidden" />
                                        <button class="btn btn-info me-md-2" type="submit">
                                            <i class="fa fa-money"></i>
                                            Update Cousrse
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-info me-md-2" type="submit"> <i class="fa fa-send"></i> Add Course</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

