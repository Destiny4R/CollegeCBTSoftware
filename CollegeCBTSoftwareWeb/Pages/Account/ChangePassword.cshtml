@page
@model CBTInformationSystemWeb.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card mt-4">
                <div class="card-body invoice-head">
                    <div class="h3 mb-3 text-center"><strong>Change Password</strong></div>
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success mt-2" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
                            <strong><i class="mdi mdi-checkbox-marked-circle-outline display-4 text-success"></i></strong> &emsp; @TempData["success"].
                        </div>
                    }
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger mt-2" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
                            <strong><i class="mdi mdi-checkbox-marked-circle-outline display-4 text-danger"></i></strong> &emsp; @TempData["error"].
                        </div>
                    }
                    <form method="post">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock  ml-1"></i></span>
                            </div>
                            <input asp-for="input.Oldpassword" class="form-control" placeholder="Old password" required maxlength="20" />
                        </div>
                        <span asp-validation-for="input.Oldpassword" class="text-danger"></span>
                        <div class="input-group mb-2 mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock  ml-1"></i></span>
                            </div>
                            <input asp-for="input.Newpassword" class="form-control" placeholder="New password" required maxlength="20" />
                        </div>
                        <span asp-validation-for="input.Newpassword" class="text-danger"></span>
                        <div class="input-group mb-2 mt-1">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock  ml-1"></i></span>
                            </div>
                            <input asp-for="input.Confirmpassword" class="form-control" placeholder="Confirm new password" required maxlength="20" />
                        </div>
                        <span asp-validation-for="input.Confirmpassword" class="text-danger"></span>
                        <div class="mt-2">
                            <button class="btn btn-primary btn-block" type="submit">
                                Update Password
                                <i class="fas fa-sign-in-alt ml-1"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
